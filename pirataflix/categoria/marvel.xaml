<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pirataflix.categoria.marvel">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="logo"/>
            <ScrollView>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="300"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <ImageButton x:Name="avengers_eg" Grid.Row="0" Grid.Column="0"/>
                    <ImageButton x:Name="capitaoamerica_gc" Grid.Column="1" Grid.Row="0"/>
                    <ImageButton x:Name="ironman3" Grid.Column="0" Grid.Row="1"/>
                    <ImageButton x:Name="spidermannwh" Grid.Column="1" Grid.Row="1"/>
                </Grid>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>